<!DOCTYPE html>
<html lang="en">

<head>    
    <%- include('../partials/head'); %>
</head>

<body class="app app-login container-fluid">
    <div class="row g-0 app-auth-wrapper">
        <div class="col-12 col-md-6 col-lg-9 auth-main-col text-center p-2">
            <div class="d-flex flex-column align-content-end">
                <div class="app-auth-body mx-auto">
                    <div class="app-auth-branding mb-1"><a class="app-logo" href="index.html"><img
                                class="logo-icon me-2" src="/public/assets/images/app-logo.svg" alt="logo"></a></div>
                    <h2 class="auth-heading text-center mb-2">easyWA gateway</h2>
                    <div class="auth-form-container text-start">
                        <div class="d-grid gap-2 d-md-flex">
                            <div class="col-auto">
                                <input type="number" name="number" class="form-control form-control-lg" placeholder="Your number ex 628573344980"
                                    aria-label="your number">
                            </div>
                            <div class="col-auto">
                                <button type="button" id="btn-login" class="btn btn-primary btn-lg">Log In</button>
                            </div>
                        </div>
                    </div>
                    <!--//auth-form-container-->
                </div>
                <!--//auth-body-->
                
            </div>
            <!--//flex-column-->
        </div>        
        
        <!--//auth-background-col-->
        <footer class="app-footer">
		    <%- include('../partials/footer'); %>
	    </footer><!--//app-footer-->
    </div>
    <!--//row-->
    <script src="/public/assets/js/jquery.min.js"></script>    
    <script>
        const apikey = '<%= apikey %>'
        $(document).ready(function () {
            $('#btn-login').click(function () {
                const number = $(this).closest('div').prev().find('input').val()
                window.location.href = `/${number}/panel?apikey=${apikey}`
            })
        });
    </script>
</body>

</html>
